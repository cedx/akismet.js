{
	"bugs": "https://github.com/cedx/akismet.js/issues",
	"description": "Prevent comment spam using the Akismet service.",
	"homepage": "https://docs.belin.io/akismet.js",
	"license": "MIT",
	"name": "@cedx/akismet",
	"repository": "github:cedx/akismet.js",
	"type": "module",
	"version": "16.0.2",
	"author": {
		"email": "cedric@belin.io",
		"name": "CÃ©dric Belin",
		"url": "https://belin.io"
	},
	"devDependencies": {
		"@types/node": "^20.5.1",
		"c8": "^8.0.1",
		"eslint": "^8.47.0",
		"typedoc": "^0.24.8",
		"typescript": "^5.1.6"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"exports": {
		"types": "./lib/index.d.ts",
		"import": "./src/index.js"
	},
	"files": [
		"lib/",
		"src/"
	],
	"imports": {
		"#akismet": {
			"types": "./lib/index.d.ts",
			"import": "./src/index.js"
		}
	},
	"keywords": [
		"akismet",
		"api",
		"client",
		"comment",
		"spam",
		"validation"
	],
	"scripts": {
		"build": "node scripts/build.js && tsc --project src/jsconfig.json",
		"clean": "node scripts/clean.js",
		"doc": "typedoc --options etc/typedoc.json && node scripts/doc.js",
		"dist": "npm run clean && npm run build",
		"lint": "tsc --project jsconfig.json && eslint --config=etc/eslint.json example scripts src test",
		"postpublish": "node scripts/publish.js",
		"prepack": "npm run dist",
		"test": "c8 --all --include=src/**/*.js --report-dir=var --reporter=lcovonly node --test --test-reporter=spec"
	}
}
